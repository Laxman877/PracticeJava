package arrays;

public class MaxAndMinOfArray {
	public static void main(String[] args) {
		int a[]= {10,62,75,13,45,98,41,25};
		int max=a[0];
		int min=a[0];
		for(int i=0;i<a.length;i++) {
			if(a[i]>max) {
				min=max;
				max=a[i];
			}else if(a[i]<min) {
				min=a[i];
			}
		}
		System.out.println("the max val is: "+max);
		System.out.println("the min val is: "+min);
	}
}
